<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/b1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_ripple"
        android:src="@drawable/round_repeat_24"
        app:layout_constraintBottom_toBottomOf="@+id/b3"
        app:layout_constraintEnd_toStartOf="@+id/b2"
        android:padding="17dp"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="@+id/b3"
        app:tint="@color/white2" />

    <ImageButton
        android:id="@+id/b2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="6dp"
        android:scaleType="fitXY"
        android:background="@drawable/rounded_ripple"
        android:src="@drawable/round_skip_previous_24"
        app:layout_constraintBottom_toBottomOf="@+id/b3"
        app:layout_constraintEnd_toStartOf="@+id/b3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toTopOf="@+id/b3"
        android:alpha="0.7"
        app:tint="@color/white2" />

    <ImageButton
        android:id="@+id/b3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_ripple"
        android:src="@drawable/start_pause_avd"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/b4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        android:alpha="0.75"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/b4"
        android:scaleType="fitXY"
        android:padding="6dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_ripple"
        android:src="@drawable/round_skip_next_24"
        app:layout_constraintBottom_toBottomOf="@+id/b3"
        app:layout_constraintEnd_toStartOf="@+id/b5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b3"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="@+id/b3"
        app:tint="@color/white2" />

    <ImageButton
        android:id="@+id/b5"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:background="@drawable/rounded_ripple"
        android:src="@drawable/round_shuffle_24"
        app:layout_constraintBottom_toBottomOf="@+id/b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b4"
        app:layout_constraintTop_toTopOf="@+id/b3"
        android:alpha="0.6"
        android:padding="17dp"
        app:tint="@color/white2" />

    <io.iskopasi.player_test.views.AnimatedSeekBarView
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:theme="@style/Widget.AppCompat.SeekBar"
        android:background="@null"
        android:progressTint="@color/text_color_1"
        android:thumb="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer_start"
        android:layout_width="80dp"
        android:layout_height="13dp"
        android:fontFamily="@font/arima_madurai_thin"
        android:gravity="start"
        android:maxLines="1"
        tools:text="00:00"
        android:textColor="@color/text_color_1_trans3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/seekBar"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        app:layout_constraintTop_toTopOf="@+id/seekBar"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/timer_end"
        android:layout_width="80dp"
        android:layout_height="13dp"
        android:fontFamily="@font/arima_madurai_thin"
        android:gravity="end"
        android:maxLines="1"
        tools:text="00:00:00"
        android:textColor="@color/text_color_1_trans3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/seekBar"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        app:layout_constraintTop_toTopOf="@+id/seekBar"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>